<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <com.opusone.leanon.testcumstomview.OoFlatButton
        android:id="@+id/first"
        android:layout_width="584dp"
        android:layout_height="156dp"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="54dp"
        app:iconPosition="left"
        app:iconImage="@drawable/get_phone_icon"
        app:Text="수락"
        app:FontSize="42sp"
        app:BackGround="@drawable/confirm_button"
        app:TextColor="@color/selector_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <com.opusone.leanon.testcumstomview.OoFlatButton
            android:id="@+id/second"
            android:layout_width="584dp"
            android:layout_height="156dp"
            android:layout_marginBottom="54dp"
            android:layout_marginStart="30dp"
            app:iconPosition="left"
            app:iconImage="@drawable/reject_phone_icon"
            app:Text="거절"
            app:FontSize="42sp"
            app:BackGround="@drawable/reject_button"
            app:TextColor="@color/selector_button_text"
            app:layout_constraintStart_toEndOf="@id/first"
            app:layout_constraintBottom_toBottomOf="parent" />

    <com.opusone.leanon.testcumstomview.OoFlatButton
        android:id="@+id/third"
        android:layout_width="211dp"
        android:layout_height="90dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        app:BackGround="@drawable/basic_button_black"
        app:FontSize="30sp"
        app:Text="Health\nCare"
        app:iconImage="@drawable/all_icon"
        app:iconPosition="right"
        app:isKeepshadowMargin="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.opusone.leanon.testcumstomview.OoFlatButton
        android:id="@+id/fourth"
        android:layout_width="211dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        app:BackGround="@drawable/basic_button_orange"
        app:FontSize="30sp"
        app:Text="Entertain"
        app:iconImage="@drawable/enjoy_life_icon"
        app:iconPosition="right"
        app:isKeepshadowMargin="false"
        app:layout_constraintStart_toEndOf="@id/third"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fifth"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:text="Entertain"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/enjoy_life_icon"
        app:layout_constraintStart_toEndOf="@id/fourth"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>